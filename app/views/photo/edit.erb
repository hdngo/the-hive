<div class="body-div">

<img class="col-xs-8 col-xs-offset-2" src=<%= @photo.link %> alt="an image">

<div class="col-sm-4 col-md-4 col-sm-offset-4 col-md-offset-4 panel panel-default">
<div class="panel-body">
<form action="/photo/<%= @photo.id %>/edit" method="post">
<input type="hidden" name="_method" value="put">

<label style="display:block"><span class="white">Caption: </label>
<input class="form-control" type="text" name="caption" value=<%= @photo.caption %>>
<input class="btn btn-warning" type="submit" value="Update photo">
</form>

<% if current_user == @user %>
	<a href="/photo/<%= @photo.id %>"><button>Cancel</button></a>
<% end %>
</div>
</div>


</div>